<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context="com.segway.robot.locomotionsample.BaseActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/set_linear_speed"
            android:onClick="onClick"
            android:text="@string/setlinearvelocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/linear_speed_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:digits="0123456789.-"
            android:inputType="number"
            android:maxLength="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/set_v_speed"
            android:onClick="onClick"
            android:text="@string/setangularvelocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/v_speed_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi"
            android:digits="0123456789.-"
            android:inputType="number"
            android:maxLength="5"/>
    </LinearLayout>
    <Button
        android:id="@+id/stop"
        android:text="@string/stop"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/left_ticks"
            android:layout_weight="0.33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/right_ticks"
            android:layout_weight="0.33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ticks_time"
            android:layout_weight="0.33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
